{% extends "govuk/template.njk" %}
  {% block head %}
<!--[if !IE 8]><!-->
    <link rel="stylesheet" type="text/css" href="styles/main.css">

{% endblock %}

{% block content %}

{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}

{{ govukBreadcrumbs({
  items: [
    {
      text: "Home",
      href: "login"
    },
    {
      text: "User menu",
      href: "usermenu"
    },
          {
      text: "Add claimant details",
      href: "addClaimantDetails"
    }
  ]
}) }}
<br>

<div class="govuk-tabs" data-module="govuk-tabs">
  <h2 class="govuk-tabs__title">
    Contents
  </h2>
  <ul class="govuk-tabs__list">
    <li class="govuk-tabs__list-item govuk-tabs__list-item--selected">
      <a class="govuk-tabs__tab" href="/claimantDetails">
        Claimant details
      </a>
  </ul>
  <div class="govuk-tabs__panel" id="claimantDetails">
    <h2 class="govuk-heading-l">Enter claimant details</h2>

    {# ! Titles and Input #}

<dl class="govuk-summary-list">


  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
        <form action="addClaimantDetails" method="POST" id="addClaimantDetails">
      NI Number
    </dt>
    <dd class="govuk-summary-list__value">
      <input class="govuk-input" id="nino" name="nino" type="text">
    </dd>
  </div>



  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">

      <h1 class="govuk-heading-m"><label class="govuk-label govuk-label--s" for="title">
          Title
        </label>
        </h1>
    </dt>

    <dd class="govuk-summary-list__value">
      <input class="govuk-input" id="title" name="title" type="text">
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <h1 class="govuk-heading-m"><label class="govuk-label govuk-label--s" for="first_name">
          First name
        </label>
        </h1>
    </dt>

    <dd class="govuk-summary-list__value">
      <input class="govuk-input" id="first_name" name="first_name" type="text">
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <h1  class="govuk-heading-m"><label class="govuk-label govuk-label--s" for="last_name">
          Last name
        </label>
        </h1>
    </dt>

    <dd class="govuk-summary-list__value">
      <input class="govuk-input" id="last_name" name="last_name" type="text">
    </dd>
  </div>

 <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <h1  class="govuk-heading-m"><label class="govuk-label govuk-label--s" for="dob">
         Date of Birth
        </label>
        </h1>
    </dt>
    <dd class="govuk-summary-list__value">
      <input class="govuk-input" id="dob" name="dob" type="text">
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <h1 class="govuk-heading-m"><label class="govuk-label govuk-label--s" for="address1">
          Address 1
        </label>
        </h1>
    </dt>

    <dd class="govuk-summary-list__value">
      <input class="govuk-input" id="address1" name="address1" type="text">
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <h1 class="govuk-heading-m"><label class="govuk-label govuk-label--s" for="address2">
          Address 2
        </label>
        </h1>
    </dt>

    <dd class="govuk-summary-list__value">
      <input class="govuk-input" id="address2" name="address2" type="text">
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <h1 class="govuk-heading-m"><label class="govuk-label govuk-label--s" for="address3">
          Address 3
        </label>
        </h1>
    </dt>

    <dd class="govuk-summary-list__value">
      <input class="govuk-input" id="address3" name="address3" type="text">
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <h1 class="govuk-heading-m"><label class="govuk-label govuk-label--s" for="town">
          Town
        </label>
        </h1>
    </dt>

    <dd class="govuk-summary-list__value">
      <input class="govuk-input" id="town" name="town" type="text">
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <h1 class="govuk-heading-m"><label class="govuk-label govuk-label--s" for="county">
          County
        </label>
        </h1>
    </dt>

    <dd class="govuk-summary-list__value">
      <input class="govuk-input" id="county" name="county" type="text">
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <h1 class="govuk-heading-m"><label class="govuk-label govuk-label--s" for="postcode">
          Post code
        </label>
        </h1>
    </dt>

    <dd class="govuk-summary-list__value">
      <input class="govuk-input" id="postcode" name="postcode" type="text">
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <h1 class="govuk-heading-m"><label class="govuk-label govuk-label--s" for="sc1">
          Security question 1
        </label>
        </h1>
    </dt>

    <div class="govuk-form-group">

    <select class="govuk-select" id="secQ1" name="secQ1">
    <option value="{{items.sec1id}}" selected>{{items.sec_question1}}</option>
    {% for secQuestion in secQuestions %} 
    <option value="{{secQuestion.id}}">{{secQuestion.question}}</option>
    {% endfor %}
  </select>
</div>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <h1 class="govuk-heading-m"><label class="govuk-label govuk-label--s" for="sc2">
          Security question 2
        </label>
        </h1>
    </dt>

<div class="govuk-form-group">

    <select class="govuk-select" id="secQ2" name="secQ2">
    <option value="{{items.sec2id}}" selected>{{items.sec_question2}}</option>
    {% for secQuestion in secQuestions %} 
    <option value="{{secQuestion.id}}">{{secQuestion.question}}</option>
    {% endfor %}
  </select>
</div>
  </div>

    <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <h1 class="govuk-heading-m"><label class="govuk-label govuk-label--s" for="sa1">
          Security answer 1
        </label>
        </h1>
    </dt>

    <dd class="govuk-summary-list__value">
      <input class="govuk-input" id="secA1" name="secA1" type="text">
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <h1 class="govuk-heading-m"><label class="govuk-label govuk-label--s" for="sa2">
          Security answer 2
        </label>
        </h1>
    </dt>

    <dd class="govuk-summary-list__value">
      <input class="govuk-input" id="secA2" name="secA2" type="text">
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      Appointee
    </dt>
    <dd class="govuk-summary-list__value">
      <input class="govuk-input" id="appointee" name="appointee" type="text">
    </dd>
  </div>
</dl>


<table>
  <input type="hidden" name="hiddenUpdateClaimant" id="hiddenUpdateClaimant" />
        <button class="govuk-button" data-module="govuk-button" type="submit" id="btaddClaimant">Next Page</button>

</form> 
  </table>

{% endblock %}
