{% extends "govuk/template.njk" %}
  {% block head %}
<!--[if !IE 8]><!-->
    <link rel="stylesheet" type="text/css" href="styles/main.css">
{% endblock %}

{% block content %}

{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}

{{ govukBreadcrumbs({
  items: [
    {
      text: "Home",
      href: "login"
    },
    {
      text: "User menu",
      href: "usermenu"
    },
    {
      text: "Search claimant",
      href: "searchClaimant"
    },
    {
      text: "Security clearence",
      href: "securityLogin"
    },
      {
      text: "Appointee details",
      href: "appointeeDetails"
    }
  ]
}) }}
<br>

<div class="govuk-tabs" data-module="govuk-tabs">
  <h2 class="govuk-tabs__title">
    Contents
  </h2>
  <ul class="govuk-tabs__list">
    <li class="govuk-tabs__list-item">
      <a class="govuk-tabs__tab" href="/claimantDetails">
        Claimant details
      </a>
    </li>
    <li class="govuk-tabs__list-item  govuk-tabs__list-item--selected">
      <a class="govuk-tabs__tab" href="/appointeeDetails">
        Appointee details
      </a>
    </li>
    <li class="govuk-tabs__list-item">
      <a class="govuk-tabs__tab" href="/bankDetails">
        Bank details
      </a>
    </li>
    <li class="govuk-tabs__list-item">
      <a class="govuk-tabs__tab" href="/pensionDetails">
        Pension details
      </a>
    </li>
        <li class="govuk-tabs__list-item">
      <a class="govuk-tabs__tab" href="/paymentHistory">
        Payment history
      </a>
    </li>
  </ul>
  <div class="govuk-tabs__panel" id="appointeeDetails">
    <h2 class="govuk-heading-l">Appointee details</h2>

<dl class="govuk-summary-list">

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      NI Number
    </dt>
    <dd class="govuk-summary-list__value">
      {{items.nino}}
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      Title
    </dt>
    <dd class="govuk-summary-list__value">
      {{items.title}}
    </dd>
    <dd class="govuk-summary-list__actions">
      <a class="govuk-link" href="addAppointeeDetails">
        Change<span class="govuk-visually-hidden"> Title</span>
      </a>
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      First name
    </dt>
    <dd class="govuk-summary-list__value">
      {{items.first_name}}
    </dd>
    <dd class="govuk-summary-list__actions">
      <a class="govuk-link" href="addAppointeeDetails">
        Change<span class="govuk-visually-hidden"> First name</span>
      </a>
    </dd>
  </div>

<div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      Last name
    </dt>
    <dd class="govuk-summary-list__value">
      {{items.last_name}}
    </dd>
    <dd class="govuk-summary-list__actions">
      <a class="govuk-link" href="addAppointeeDetails">
        Change<span class="govuk-visually-hidden"> Last name</span>
      </a>
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      Date of birth
    </dt>
    <dd class="govuk-summary-list__value">
      {{items.dob}}
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      Address 1
    </dt>
    <dd class="govuk-summary-list__value">
      {{items.address1}}
    </dd>
    <dd class="govuk-summary-list__actions">
      <a class="govuk-link" href="addAppointeeDetails">
        Change<span class="govuk-visually-hidden"> Address 1</span>
      </a>
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      Address 2
    </dt>
    <dd class="govuk-summary-list__value">
      {{items.address2}}
    </dd>
    <dd class="govuk-summary-list__actions">
      <a class="govuk-link" href="addAppointeeDetails">
        Change<span class="govuk-visually-hidden"> Address 2</span>
      </a>
    </dd>
  </div>

<div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      Address 3
    </dt>
    <dd class="govuk-summary-list__value">
      {{items.address3}}
    </dd>
    <dd class="govuk-summary-list__actions">
      <a class="govuk-link" href="addAppointeeDetails">
        Change<span class="govuk-visually-hidden"> Address 3</span>
      </a>
    </dd>
  </div>

    <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      Town
    </dt>
    <dd class="govuk-summary-list__value">
      {{items.town}}
    </dd>
    <dd class="govuk-summary-list__actions">
      <a class="govuk-link" href="addAppointeeDetails">
        Change<span class="govuk-visually-hidden"> Town</span>
      </a>
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      County
    </dt>
    <dd class="govuk-summary-list__value">
      {{items.county}}
    </dd>
    <dd class="govuk-summary-list__actions">
      <a class="govuk-link" href="addAppointeeDetails">
        Change<span class="govuk-visually-hidden"> County</span>
      </a>
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      Post code
    </dt>
    <dd class="govuk-summary-list__value">
      {{items.postcode}}
    </dd>
    <dd class="govuk-summary-list__actions">
      <a class="govuk-link" href="addAppointeeDetails">
        Change<span class="govuk-visually-hidden"> Post code</span>
      </a>
    </dd>
  </div>

   <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      Relationship
    </dt>
    <dd class="govuk-summary-list__value">
      {{items.relationship}}
    </dd>
    <dd class="govuk-summary-list__actions">
      <a class="govuk-link" href="addAppointeeDetails">
        Change<span class="govuk-visually-hidden"> Post code</span>
      </a>
    </dd>
  </div>

</dl>

{% endblock %}
