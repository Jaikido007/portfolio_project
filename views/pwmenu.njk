{% extends "govuk/template.njk" %}
  {% block head %}
<!--[if !IE 8]><!-->
    <link rel="stylesheet" type="text/css" href="styles/main.css">
{% endblock %}

{% block content %}

<form class="govuk-label--l" action=changepw method="POST">
<h1 class="govuk-heading-l">Password</h1>
  <input class="govuk-input govuk-input--width-20" type="hidden" name="username" placeholder="" value="{{username}}" required="required">
</br>
</br>
  <h1 class="govuk-heading-xl">Change Password</h1>
  <input class="govuk-input govuk-input--width-20" type="text" name="password1" placeholder="" required="required">
</br>
</br>
<h1 class="govuk-heading-l">Confirm Password</h1>
  <input class="govuk-input govuk-input--width-20" type="password" name="password2" placeholder="" required="required">
</br>
</br>
<button class="govuk-button" data-module="govuk-button" type="login">
  Submit
</button>
</form>
{% endblock %}
{% block bodyEnd %}
  {# Run JavaScript at end of the <body>, to avoid blocking the initial render. #}
  <script>document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');</script>
  <script src="styles/all.js"></script>
  <script>window.GOVUKFrontend.initAll()</script>
{% endblock %}