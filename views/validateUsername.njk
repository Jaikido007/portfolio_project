{% extends "govuk/template.njk" %}
  {% block head %}
<!--[if !IE 8]><!-->
    <link rel="stylesheet" type="text/css" href="styles/main.css">
{% endblock %}

{% block content %}
  <h1 class="govuk-heading-xl">Forgot Password</h1>
<form class="govuk-label--l" action=validateUsername2 method="POST">
<h1 class="govuk-heading-l">Username</h1>
  <input class="govuk-input govuk-input--width-20" type="text" name="username" placeholder="" value="{{username}}" required="required">
</br>
</br>

<button class="govuk-button" data-module="govuk-button" type="login">
  Submit
</button>
</form>
{% endblock %}
{% block bodyEnd %}
  {# Run JavaScript at end of the <body>, to avoid blocking the initial render. #}
  <script>document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');</script>
  <script src="styles/all.js"></script>
  <script>window.GOVUKFrontend.initAll()</script>
{% endblock %}